<h2>Recorded Sales</h2>
<table>
    <thead>
        <tr>
            <th>Brand</th>
            <th>Quantity</th>
            <th>Date & Time</th> <!-- Added Date & Time column -->
        </tr>
    </thead>
    <tbody>
        <% sales.forEach(sale => { %>
            <tr>
                <td><%= sale.brand %></td>
                <td><%= sale.quantity %></td>
                <td><%= new Date(sale.date).toLocaleString() %></td> <!-- Display date and time -->
            </tr>
        <% }) %>
    </tbody>
</table>
